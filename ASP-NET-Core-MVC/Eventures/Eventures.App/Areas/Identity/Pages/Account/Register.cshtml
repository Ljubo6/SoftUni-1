@page
@model RegisterModel

<div class="container-fluid w-50 mx-auto justify-content-center">
    <div class="text-center my-3"><h1>Register</h1></div>
    <hr />
    <form id="account" method="post">
        <div class="row justify-content-between">
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.Username"></label></div>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.Email"></label></div>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-between">
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.Password"></label></div>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.ConfirmPassword"></label></div>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="row justify-content-between">
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.FirstName"></label></div>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group w-45">
                <div class="text-center"><label asp-for="Input.LastName"></label></div>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="text-center"><label asp-for="Input.UCN"></label></div>
            <input asp-for="Input.UCN" class="form-control" />
            <span asp-validation-for="Input.UCN" class="text-danger"></span>
        </div>
        <hr />
        <div class="container-fluid text-center">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>